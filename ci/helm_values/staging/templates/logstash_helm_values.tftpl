affinity:
  nodeAffinity:
    requiredDuringSchedulingIgnoredDuringExecution:
      nodeSelectorTerms:
      - matchExpressions:
        - key: nodegroup
          operator: In
          values:
          - staging-pipeline
consumerGroupId: logstash
elasticsearchHost: ${elasticsearch_server}
kafkaHost: ${kafka_server}
kafkaTopic: metrics
namespace: logstash
secrets:
  elasticsearch:
    password: ${elasticsearch_password}
    username: ${elasticsearch_username}
  kafkaAuth:
    enabled: true
    password: ${kafka_password}
    username: ${kafka_username}
